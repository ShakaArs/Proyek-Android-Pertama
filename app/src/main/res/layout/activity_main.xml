<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/textview"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/biru"
       android:fontFamily="serif"
       android:text="Selamat Datang"
       android:textAlignment="center"
       android:textColor="@color/white" />

   <TextView
       android:id="@+id/textView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="24dp"
       android:text="Hallo Dek"
       android:textAlignment="center"
       app:layout_constraintTop_toBottomOf="@+id/textview"
       tools:layout_editor_absoluteX="0dp" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Ini adalah Biodata saya"
       android:textAlignment="center"
       app:layout_constraintTop_toBottomOf="@+id/textView"
       tools:layout_editor_absoluteX="206dp" />

   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/circleImageView"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:src="@drawable/myfoto"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView2" />

   <TextView
       android:id="@+id/textView3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       android:text="Nama : Shaka Arisya"
       android:textAlignment="center"
       app:layout_constraintTop_toBottomOf="@+id/circleImageView"
       tools:layout_editor_absoluteX="0dp" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:text="NIM : A11.2021.13406"
       android:textAlignment="center"
       app:layout_constraintTop_toBottomOf="@+id/textView3"
       tools:layout_editor_absoluteX="0dp" />

   <TextView
       android:id="@+id/textView5"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="80dp"
       android:text="Hobby : menonton Film"
       android:textAlignment="center"
       app:layout_constraintTop_toBottomOf="@+id/circleImageView"
       tools:layout_editor_absoluteX="0dp" />

   <TextView
       android:id="@+id/textView6"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="124dp"
       android:text="Seperti teka-teki, Kalian akan selalu penasaran denganku"
       android:textAlignment="center"
       app:layout_constraintTop_toBottomOf="@+id/circleImageView"
       tools:layout_editor_absoluteX="0dp" />

   <TextView
       android:id="@+id/textView7"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Hai panggil aku Shaka, aku berasal dari Kota kecil yaitu Brebes"
       android:textAlignment="center"
       app:layout_constraintTop_toBottomOf="@+id/textView6"
       tools:layout_editor_absoluteX="0dp" />

   <TextView
       android:id="@+id/textView8"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Aku mahasiswa prodi Teknik Informatika Udinus angkatan 2021"
       android:textAlignment="center"
       app:layout_constraintTop_toBottomOf="@+id/textView7"
       tools:layout_editor_absoluteX="16dp" />

   <Button
       android:id="@+id/btn_alamat"
       android:onClick="alamat"
       android:layout_width="243dp"
       android:layout_height="48dp"
       android:layout_marginTop="428dp"
       android:text="Alamat"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/textview" />

   <Button
       android:id="@+id/btn_telepon"
       android:layout_width="243dp"
       android:layout_height="48dp"
       android:layout_marginTop="476dp"
       android:text="Telepon"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/textview" />

   <Button
       android:id="@+id/btn_email"
       android:onClick="email"
       android:layout_width="243dp"
       android:layout_height="48dp"
       android:layout_marginTop="524dp"
       android:text="Email"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/textview" />

</androidx.constraintlayout.widget.ConstraintLayout>